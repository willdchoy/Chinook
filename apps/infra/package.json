{
	"name": "infra",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev:apply": "./scripts/dev-apply.sh",
		"dev:apply:assumed-role": "./scripts/dev-apply-assume-role.sh",
		"dev:destroy": "./scripts/dev-destroy.sh && pnpm tf:delete",
		"dev:init": "pnpm tf:delete && ./scripts/dev-init.sh",
		"dev:plan": "./scripts/dev-plan.sh",
		"dev:start": "pnpm localstack:start && pnpm tf:format && pnpm dev:init && pnpm dev:apply:assumed-role && pnpm dev:apply",
		"dev:restart": "pnpm localstack:reset && pnpm dev:start",

		"prod:apply": "./scripts/prod-apply.sh",
		"prod:apply:assumed-role": "./scripts/prod-apply-assume-role.sh",
		"prod:destroy": "./scripts/prod-destroy.sh && pnpm tf:delete",
		"prod:init": "pnpm tf:delete && ./scripts/prod-init.sh",
		"prod:plan": "./scripts/prod-plan.sh",
		"prod:start": "pnpm tf:format && pnpm prod:init && pnpm prod:apply",

		"tf:delete": "./scripts/tf-delete.sh",
		"tf:format": "terraform fmt --recursive",
		"tf:reset": "pnpm localstack:reset && pnpm tf:delete",
		"localstack:reset": "./scripts/localstack-reset.sh",
		"localstack:start": "./scripts/localstack-start.sh"
	},
	"keywords": [],
